<div class="container">
  <h3>Books</h3>
  <div class="col-3">
    <h3>User info</h3>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th>introduction</th>
          <th>Setting</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>data</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-9">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>